{
  "name": "typescript-rollup-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for a working typescript project using rollup for module packaging",
  "scripts": {
    "clean:dist": "rimraf dist",
    "clean:modules": "rimraf node_modules",
    "clean": "run-p clean:*",

    "watch:typescript": "tsc -w",
    "watch:scss": "node-sass src/ --output dist/compiled --source-map true -w",
    "watch:rollup": "rollup -c -w",

    "build:typescript": "tsc",
    "build:scss": "node-sass src/ --output dist/compiled --source-map true",
    "build:rollup": "rollup -c",
    "build": "npm-run-all  --parallel build:typescript build:scss  --serial build:rollup",

    "test": "mocha"
  },
  "devDependencies": {
    "typescript": "^2.2.2",
    "rollup": "^0.41.6",
    "rollup-plugin-node-resolve":"^3.0.0",
    "rollup-plugin-commonjs":"^8.0.2",
    "rollup-plugin-postcss":"^0.4.1",
    "rollup-plugin-extension-mapper": "franklin-ross/rollup-plugin-extension-mapper",
    "node-sass": "^4.5.2",
    "cssnano": "^3.10.0",
    "autoprefixer": "^6.7.7",
    "npm-run-all": "^4.0.2",
    "rimraf":"^2.6.1"
  },"dependencies": {
    "no-op": "^1.0.3"
  },
  "keywords": [
    "typescript",
    "tsc",
    "rollup",
    "boilerplate",
    "quickstart"
  ],
  "author": "Franklin Ross <fhross@gmail.com>",
  "license": "ISC"
}
